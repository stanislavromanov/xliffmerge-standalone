{
  "name": "xliffmerge",
  "version": "1.0.0",
  "description": "xliffmerge - merge translation files for Angular i18n",
  "main": "dist/main.js",
  "bin": {
    "xliffmerge": "./dist/cli.js"
  },
  "scripts": {
    "build": "npm run clean && npm run compile && npm run copy-assets",
    "clean": "rm -rf dist",
    "compile": "tsc",
    "copy-assets": "cp src/xliffmerge/configuration-schema.json dist/xliffmerge/",
    "prepare": "npm run build",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "i18n",
    "xliff",
    "angular",
    "translation",
    "merge"
  ],
  "author": "Stanislav Romanov (stanislavromanov.com)",
  "license": "MIT",
  "dependencies": {
    "@xmldom/xmldom": "^0.8.10",
    "chalk": "^2.4.2",
    "commander": "^11.0.0",
    "glob": "^10.3.10",
    "he": "^1.2.0",
    "rxjs": "^7.8.1",
    "tokenizr": "^1.3.10"
  },
  "devDependencies": {
    "@types/he": "^1.2.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "~5.5.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
